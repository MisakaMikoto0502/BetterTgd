{
    "name": "BetterTgd",
    "version": "1.0.0",
    "author": "Misaka Mikoto (zeroday0619)",
    "description": "트게더 스트리머 페이지에서 페이지 이름을 클릭시 메인페이지가 아닌 해당 스트리머 페이지로 연결해줍니다.",
    "permissions": ["tabs", "*://*/*"],
    "background": {
      "scripts": [
        "polyfill/browser-polyfill.min.js",
        "lib/core.js"
      ],
      "persistent": true
    },
    "icons": {
      "256":"showcase/logo-256x256.png",
      "192":"showcase/logo-192x192.png",
      "128":"showcase/logo-128x128.png"
    },
    "browser_action": {
      "default_icon": "showcase/logo-192x192.png",
      "default_title": "BetterTgd"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "BetterTgd@misakamikoto.moe",
        "strict_min_version": "63.0"
      }
    },
    "manifest_version": 2
}
